<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:id="@+id/relativeLayout_dialog_footer"
        xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
        >


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_pop_footer"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_play"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_av_play_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_refresh"
                android:src="@drawable/ic_av_replay"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView_play"
                android:layout_toEndOf="@+id/imageView_play"
                android:layout_marginRight="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_return_home"
                android:src="@drawable/ic_action_home"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView_refresh"
                android:layout_toEndOf="@+id/imageView_refresh" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_next_level"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_navigation_arrow_forward" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Got it!"
                android:id="@+id/button_Got_It"
                style="@style/Widget.AppCompat.Button.Small"
                android:textColor="@color/accent_base"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </RelativeLayout>


